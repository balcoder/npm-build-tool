{
  "name": "npm-scripts",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "scss:dev": "sass assets/scss/style.scss assets/css/style.css",
    "js:dev": "concat -o assets/main.js assets/js/test1.js assets/js/test2.js",    
    "scss": "sass assets/scss/style.scss dist/css/style.css",
    "concat:css": "concat -o dist/css/styles.css dist/css/style.css assets/css/test.css",
    "concat:js": "mkdirp dist/js && concat -o dist/js/scripts.js assets/js/test1.js assets/js/test2.js ",
    "concat": "npm run concat:css && npm run concat:js",
    "cssmin": "cleancss -o dist/css/styles.min.css dist/css/styles.css",
    "uglify": "uglifyjs -o dist/js/scripts.min.js dist/js/scripts.js",
    "copy:html": "copyfiles index.html dist",
    "build:css": "npm run scss && npm run concat:css && npm run cssmin",
    "build:js": "npm run concat:js && npm run uglify",
    "build:img": "node compressImages.js",
    "build": "npm run build:css && npm run build:js && npm run build:img && npm run copy:html",
    "watch:css": "onchange \"assets/scss/*.scss\" -- npm run scss:dev",
    "watch:js": "onchange \"assets/js/*.js\" -- npm run js:dev",
    "devserver": "live-server --open=assets/index.html",
    "watch": "npm-run-all --parallel devserver watch:*"
  },
  "devDependencies": {
    "clean-css-cli": "^5.5.0",
    "concat": "^1.0.3",
    "copyfiles": "^2.4.1",
    "mkdirp": "^3.0.1",
    "npm": "^8.3.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "sass": "^1.48.0",
    "sharp": "^0.33.1",
    "uglify-js": "^3.14.5"
  }
}
